{
  "name": "node-api-template",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node dist/web",
    "start:dev": "ts-node-dev -r tsconfig-paths/register src/index.ts",
    "start:dev-fresh": "npm run db && npm run start:dev",
    "db": "npm run postgresql && npm run redis && sleep 2 && npm run migrations:run",
    "db:no-migration": "npm run postgresql && npm run redis",
    "postgresql:start": "docker run -p 5432:5432 -e POSTGRES_PASSWORD=test -e POSTGRES_USER=test -d postgis/postgis",
    "postgresql:kill": "docker ps | grep postgis | awk '{print $1}' | xargs -I {} docker kill {}",
    "postgresql": "npm run postgresql:kill && npm run postgresql:start",
    "redis:start": "docker run -p 6379:6379 -d redis",
    "redis:kill": "docker ps | grep redis | awk '{print $1}' | xargs -I {} docker kill {}",
    "redis": "npm run redis:kill && npm run redis:start",
    "build": "rm -rf dist && webpack --config webpack.config.js",
    "migrations:run": "npx ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:run",
    "migrations:generate": "npx ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:generate -n migration",
    "postinstall": "npm run build && node scripts/create-orm-config && npm run migrations:run",
    "mockdata": "MOCK_DATA=1 ts-node-dev -r tsconfig-paths/register test/mock/index.ts",
    "lint": "eslint src/**/*.ts test/**/*.ts",
    "test": "nyc --extension .ts npm run test:no-spec | tap-spec && nyc report --reporter=text-lcov > coverage.lcov",
    "test:no-spec": "NODE_ENV=test ts-node --files -r tsconfig-paths/register node_modules/tape/bin/tape test/**/*.test.ts"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@sendgrid/mail": "^6.5.0",
    "@types/blue-tape": "^0.1.33",
    "@types/connect-redis": "0.0.13",
    "@types/convict": "^4.2.1",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.2",
    "@types/express-session": "^1.15.16",
    "@types/faker": "^4.1.9",
    "@types/geojson": "^7946.0.7",
    "@types/lodash": "^4.14.149",
    "@types/morgan": "^1.7.37",
    "@types/passport": "^1.0.2",
    "@types/proj4": "^2.5.0",
    "@types/redis": "^2.8.14",
    "@types/tape": "^4.2.34",
    "axios": "^0.21.1",
    "blue-tape": "^1.0.0",
    "body-parser": "^1.19.0",
    "child-process-promise": "^2.2.1",
    "class-validator": "^0.11.0",
    "connect-redis": "^4.0.3",
    "convict": "^5.2.0",
    "copy-webpack-plugin": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "express-class-validator": "^1.0.3",
    "express-session": "^1.17.0",
    "express-sms-auth": "^1.0.1",
    "faker": "^4.1.0",
    "geojson": "^0.5.0",
    "lodash": "^4.17.15",
    "morgan": "^1.9.1",
    "nyc": "^15.0.0",
    "passport": "^0.4.1",
    "pg": "^7.17.1",
    "proj4": "^2.6.0",
    "redis": "^2.8.0",
    "tap-spec": "^5.0.0",
    "tape": "^4.13.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.1",
    "ts-node-dev": "^1.0.0-pre.44",
    "tsconfig-paths": "^3.9.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typeorm": "^0.2.22",
    "typescript": "^3.7.4",
    "webpack": "^4.41.5"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "eslint": "^6.8.0",
    "webpack-cli": "^3.3.11"
  }
}
